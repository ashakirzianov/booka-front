{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "rules": {
    "only-arrow-functions": false,
    "eofline": true,
    "jsx-no-lambda": false,
    "jsx-no-bind": false,
    "max-classes-per-file": false,
    "no-consecutive-blank-lines": true,
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "semicolon": true,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "arrays": "always",
          "objects": "always",
          "imports": "always",
          "exports": "always",
          "typeLiterals": "always",
          "functions": "ignore"
        }
      }
    ],
    "whitespace": true,
    "object-literal-sort-keys": false,
    "object-literal-shorthand": false,
    "interface-over-type-literal": false,
    "jsx-boolean-value": false,
    "ordered-imports": false
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  }
}